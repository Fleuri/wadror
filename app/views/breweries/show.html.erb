<p id="notice"><%= notice %></p>

<h2><%= @brewery.name %>
  <% if not @brewery.active  %>
      <span class="label">retired</span>
  <% end %>
</h2>
<p>
  <i>Established year <%= @brewery.year %></i>

</p>

<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), :method => :post, :class => "btn" %>

<p>
  <b>Rating average</b>
<p>
  <% if @brewery.ratings.empty? %>
      No ratings available.
  <% else %>
      Average of <%= pluralize@brewery.ratings.count, "rating", "ratings" %>  was <%= round @brewery.average_rating(@brewery.ratings) %>
  <% end %>
</p>
</p>

<p>
  <b>Number of products: <%= @brewery.beers.count %></b>
</p>

<p><b> Available products: </b></p>
    <ul>
<% @brewery.beers.each do |beer| %>
      <li><%= link_to beer.name, beer %></li>
          <% end %>
          </ul>


<%= edit_and_destroy_buttons(@brewery) %>
<%= link_to 'Back', breweries_path %> |
<%= link_to 'All Beers', beers_path %>
