<p id="notice"><%= notice %></p>

<p>
  <h1><%= @user.username %></h1>
  </p>

<td><b>I drink in these companies::</b> </td>
<% @user.beer_clubs.each do |f|%>
    <p> <%= link_to f.name, f %> </p>
<% end %>
